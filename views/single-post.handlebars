    <article class="post">
        <div class="card">
            <div class="card-header flex-row justify-space-between">
            <h3>{{post.title}}</h3>
            <h4>
                Posted by {{post.user.username}} on {{format_date post.created_at}}.
            </h4>
            </div>
            <div class="card-body">
            <p> {{post.blog_content}} </p>
            </div>
        </div> 
        
    </article>

{{#if loggedIn}}
    <form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}

</div>
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}