<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class="dark">
    Edit Post
  </h2>
  <br>
  <br>
  <form class="edit-post-form">
    <div>
        <h3 class="dark">Title: </h3>
      <input name="post-title" type="text" value="{{post.title}}" />
      <br><br>
      <h3 class="dark">Content: </h3>
        <textarea class="blog-content">{{post.blog_content}}</textarea>
    </div>
    <div>
      Created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button class="btn" type="submit">Save post</button>
    <button class="btn"type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<br>
<br>
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button class="btn" type="submit">add comment</button>
  </div>
</form>

<div class="comments">
    <br>
    <h3 class= "dark"> Comments: </h3>
    <br>
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
